# This file is part of CynuxSecurity Linux ( https://www.cynuxsecurity.org/ ).
# See COPYING for license details.

pkgname=poracle
pkgver=68.dcc00b0
pkgrel=4
pkgdesc='A tool for demonstrating padding oracle attacks.'
groups=('cynuxsecurity' 'cynuxsecurity-crypto' 'cynuxsecurity-webapp')
arch=('any')
url='https://github.com/iagox86/poracle'
license=('BSD')
depends=('ruby' 'ruby-httparty')
makedepends=('git')
source=("git+https://github.com/iagox86/$pkgname.git")
sha512sums=('SKIP')

pkgver() {
  cd $pkgname

  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $pkgname

  install -Dm 644 -t "$pkgdir/usr/share/$pkgname/" *.rb
  install -Dm 644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
  install -Dm 644 LICENSE.txt "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}

